@model TransporteWeb.Models.Agendamento

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Realizar Agendamentos</h1>

<h4>Agendamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="data" class="control-label"></label>
                <input asp-for="data" class="form-control" />
                <span asp-validation-for="data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoViagem" class="control-label"></label>
                <select asp-for="TipoViagem" class="form-control" asp-items="Html.GetEnumSelectList<Viagem>()"></select>
                <span asp-validation-for="TipoViagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEstudante" class="control-label"></label>
                <select asp-for="IdEstudante" class="form-control" asp-items="ViewBag.IdEstudante"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdVeiculo" class="control-label"></label>
                <select asp-for="IdVeiculo" class="form-control" asp-items="ViewBag.IdVeiculo"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdPonto" class="control-label"></label>
                <select asp-for="IdPonto" class="form-control" asp-items="ViewBag.IdPonto"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
