@model TransporteWeb.Models.PagamentoMulta

@{
    ViewData["Title"] = "Pagamento de Multa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Pagamento de Multa</h1>

<form asp-action="Pagar" method="post">
    <input type="hidden" asp-for="IdEstudante" />
    <div class="form-group">
        <label asp-for="Valor" class="control-label"></label>
        <input asp-for="Valor" class="form-control" />
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Pagar" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Lista">Ver pagamentos realizados</a>

</div>